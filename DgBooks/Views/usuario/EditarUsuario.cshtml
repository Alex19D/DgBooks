@model DgBooks.Models.newPassword

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <link href="~/css/edit.css" rel="stylesheet" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registro de usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="login-box">
        <h1>Editar datos</h1>
        <br />
        <form>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <!-- username -->
            <label for="UserName">Nombre</label>
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @type = "text", @minlength = "5" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

            <!-- email -->
            <label for="Email">Email</label>

            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

            <!-- passI -->
            <label for="passI">Contraseña</label>

            @Html.EditorFor(model => model.passI, new { htmlAttributes = new { @class = "form-control", @type = "password", @pattern = ".{6,}" } })
            @Html.ValidationMessageFor(model => model.passI, "", new { @class = "text-danger" })

            <!-- passII -->
            <label for="passII">Confirmar Contraseña</label>

            @Html.EditorFor(model => model.passII, new { htmlAttributes = new { @class = "form-control", @type = "password", @pattern = ".{6,}" } })
            @Html.ValidationMessageFor(model => model.passII, "", new { @class = "text-danger" })

            <br />
            <!-- boton-->
            <input type="submit" value="Guardar" class="btn btn-default" />
        </form>
        <a>
            @Html.ActionLink("Cancelar", "Index")
        </a>
</div>
    }

</body>
</html>